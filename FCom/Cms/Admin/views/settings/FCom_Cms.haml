- $c = $this->model

%fieldset
    .settings-container
        .group
            %h3
                %a(href="#") = $this->_('CMS Frontend Configuration')
            %div
                %table
                    %tr
                        %td = $this->_('Enable CMS Pages')
                        %td
                            %select(name="config[modules][FCom_Cms][page_enable]")
                                - echo BUtil::optionsHtml(array(0=>'No',1=>'Yes'), $c->get('modules/FCom_Cms/page_enable'))
                    %tr
                        %td = $this->_('CMS Page URL Prefix')
                        %td
                            %input(type="text" name="config[modules][FCom_Cms][page_url_prefix]"
                                value="#{$c->get('modules/FCom_Cms/page_url_prefix')}")
                    %tr
                        %td = $this->_('Enable CMS Nav')
                        %td
                            %select(name="config[modules][FCom_Cms][nav_enable]")
                                - echo BUtil::optionsHtml(array(0=>'No',1=>'Yes'), $c->get('modules/FCom_Cms/nav_enable'))
                    %tr
                        %td = $this->_('CMS Nav URL Prefix')
                        %td
                            %input(type="text" name="config[modules][FCom_Cms][nav_url_prefix]"
                                value="#{$c->get('modules/FCom_Cms/nav_url_prefix')}")
