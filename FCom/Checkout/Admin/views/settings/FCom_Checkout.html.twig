{% set c = THIS.get('model') %}
{% import THIS.view('admin/form-elements').twigName() as forms %}
{% set fieldData = { model: c, id_prefix:'FCom_Checkout', name_prefix:'config[modules][FCom_Checkout]' } %}
<h2>{{ "Checkout Settings"|_}}</h2>
{{ forms.accordion_start({id:'settings-FCom_Checkout'}) }}
     {{ forms.accordion_panel_start({label:'Store Origin'|_, id:'settings-FCom_Checkout-group0', in:1}) }}
        {{ forms.input(fieldData|merge({field:'store_city', label:'Store City'|_, value:c.get('modules/FCom_Checkout/store_city')})) }}
        {{ forms.input(fieldData|merge({field:'store_region', label:'Store State / Region'|_, value:c.get('modules/FCom_Checkout/store_region')})) }}
        {{ forms.input(fieldData|merge({field:'store_postcode', label:'Store Zip / Postal Code'|_, value:c.get('modules/FCom_Checkout/store_postcode')})) }}
    {{ forms.accordion_panel_end }}
{{ forms.accordion_end }}

