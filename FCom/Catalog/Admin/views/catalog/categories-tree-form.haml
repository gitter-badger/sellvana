- $tabs = $this->sortedTabs()
- $m = $this->model

%header.fcom-admin-main-title
    .btn-group
        %button.btn(onclick="return adminForm.saveAll(this)")
            %span = $this->_('Save')
    %h1 = str_replace('|', ' > ', $m->full_name)

.fcom-admin-main-container.fcom-admin-main-flush
    %nav.adm-tabs
        %ul
            - foreach ($tabs as $k => $tab)
                %li(class="#{$k===$this->cur_tab ? 'active' : ''}")
                    %a(href="#tab-#{$k}")
                        %span.icon
                        = $tab['label']

    .fcom-admin-main-content
        - foreach ($tabs as $k => $tab)
        - if (!empty($tab['view']))
            %section.adm-tabs-content(id="tab-#{$k}" #{$k!==$this->cur_tab ? 'hidden' : ''} #{empty($tab['async']) ? 'data-loaded="true"' : ''})
                - if (empty($tab['async']))
                    - echo $this->view($tab['view'])
