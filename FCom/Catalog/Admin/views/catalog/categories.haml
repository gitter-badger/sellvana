            function loadForm(id) {
                var url = '#{$formUrl}?id='+id;
                $('#categories-form-container').load(url, function() {
                    $('#categories-tree-form').attr('action', url);
                    window.adminForm = FCom.Admin.form({
                        tabs:     '.adm-tabs li',
                        panes:    '.adm-tabs-content',
                        url_get:  url,
                        url_post: url
                    });
                });
            }

        })
    })
