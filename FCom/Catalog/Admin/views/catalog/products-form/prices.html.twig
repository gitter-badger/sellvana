{% set m = THIS.model %}

<fieldset name="main-product">
    <div class="form-group">
        <label class="col-md-2 control-label" for="model-cost">{{ 'Cost'|_ }}</label>
        <div class="col-md-5">
            <input class="form-control" type="text" id="model-cost" name="model[cost]" value="{{ m.get('cost') }}" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label" for="model-msrp">{{ 'MSRP'|_ }}</label>
        <div class="col-md-5">
            <input class="form-control" type="text" id="model-msrp" name="model[msrp]" value="{{ m.get('msrp') }}" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label" for="model-map">{{ 'MAP'|_ }}</label>
        <div class="col-md-5">
            <input class="form-control" type="text" id="model-map" name="model[map]" value="{{ m.get('map') }}" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label" for="model-base-price">{{ 'Default Base Price'|_ }}</label>
        <div class="col-md-5">
            <input class="form-control" type="text" id="model-base-price" name="model[base_price]" value="{{ m.get('base_price') }}" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label" for="model-sale-price">{{ 'Default Sale Price'|_ }}</label>
        <div class="col-md-5">
            <input class="form-control" type="text" id="model-sale-price" name="model[sale_price]" value="{{ m.get('sale_price') }}" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label" for="model-markup">{{ 'Default Markup'|_ }}</label>
        <div class="col-md-5">
            <input class="form-control" type="text" id="model-markup" name="model[markup]" value="{{ m.get('markup') }}" />
        </div>
    </div>
</fieldset>

{{ THIS.hook('catalog/products-form/prices', {'model' : m}) | raw }}