- $m = $this->model
%fieldset.form-horizontal
    .control-group
        %label.control-label(for="model-cost") = $this->_('Product Name')
        .controls
            %input(type="text" name="model[cost]" id="model-cost" value="#{$m->cost}")
    .control-group
        %label.control-label(for="model-msrp") = $this->_('MSRP')
        .controls
            %input(type="text" name="model[msrp]" id="model-msrp" value="#{$m->msrp}")
    .control-group
        %label.control-label(for="model-map") = $this->_('MAP')
        .controls
            %input(type="text" name="model[map]" id="model-map" value="#{$m->map}")
    .control-group
        %label.control-label(for="model-base-price") = $this->_('Default Base Price')
        .controls
            %input(type="text" name="model[base_price]" id="model-" value="#{$m->base_price}")
    .control-group
        %label.control-label(for="model-sales-price") = $this->_('Default Sale Price')
        .controls
            %input(type="text" name="model[sale_price]" id="model-" value="#{$m->sale_price}")
    .control-group
        %label.control-label(for="model-markup") = $this->_('Default Markup')
        .controls
            %input(type="text" name="model[markup]" id="model-" value="#{$m->markup}")
- echo $this->hook('catalog/products-form/prices', array('model'=>$m))