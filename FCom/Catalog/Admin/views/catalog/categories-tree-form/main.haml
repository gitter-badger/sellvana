- $m = $this->model

%fieldset
    %ul.form-list
        %li.label-l
            %label(for="main-node_name") = $this->_('Node Name')
            %input#main-node_name(type="text" name="model[node_name]" value="#{$m->node_name}")
        %li.label-l
            %label(for="main-url_key") = $this->_('Url Key')
            %input#main-url_key(type="text" name="model[url_key]" value="#{$m->url_key}")
        %li.label-l
            %label(for="main-is_top_menu") = $this->_('Show in top menu')
            %select(name="model[is_top_menu")
                - echo $this->optionsHtml(array(0=>'No', 1=>'Yes'), $m->is_top_menu)