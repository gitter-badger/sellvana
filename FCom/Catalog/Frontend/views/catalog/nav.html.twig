{% set categories = APP.instance('FCom_Catalog_Model_Category').getTopNavCategories(2) %}
{% set activeCategory = 'home' %}

<nav class="f-catalog-navbar navbar" role="navigation">
    <div class="container">
        <ul class="nav navbar-nav collapse">
{% for cat in categories %}
<!-- TODO: correct active category -->
            <li class="dropdown">
                <a class="dropdown-toggle disabled {{ activeCategory == cat.get('url_path') ? 'active' }}"
                    href="{{ APP.href(cat.get('url_path')) }}" data-toggle="dropdown">{{ cat.get('node_name') }}</a>
{% if cat.get('children') %}
                <ul class="dropdown-menu">
{% for cat1 in cat.get('children') %}
                    <li><a href="{{ APP.href(cat1.get('url_path')) }}">{{ cat1.get('node_name') }}</a></li>
{% endfor %}
                </ul>
{% endif %}
            </li>
{% endfor %}
        </ul>
    </div>
</nav>
