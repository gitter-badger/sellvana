- $c = $this->model

.accordion.accordion-blue.panel-group#settings-FCom_Cron
    .panel.panel-default
        .panel-heading
            %a.accordion-toggle = $this->_('Area Settings')
        .panel-collapse.collapse#settings-FCom_Cron-group0
            .panel-body
                .form-group
                    %label.col-md-2.control-label = $this->_('IP: Mode')
                    .col-md-5
                        %textarea.form-control(name="config[mode_by_ip][FCom_Cron]" rows="5") = $c->get('mode_by_ip/FCom_Cron')

    .panel.panel-default
        .panel-heading
            %a.accordion-toggle = $this->_('Cron Dispatch')
        .panel-collapse.collapse.in#settings-FCom_Cron-group1
            .panel-body
                .form-group
                    %label.col-md-2.control-label = $this->_('Leeway Minutes')
                    .col-md-5
                        %input.form-control(type="text" name="config[modules][FCom_Cron][leeway_mins]"
                            value="#{$c->get('modules/FCom_Cron/leeway_mins')}")
                .form-group
                    %label.col-md-2.control-label = $this->_('Timeout Minutes')
                    .col-md-5
                        %input.form-control(type="text" name="config[modules][FCom_Cron][timeout_mins]"
                            value="#{$c->get('modules/FCom_Cron/timeout_mins')}")
                .form-group
                    %label.col-md-2.control-label = $this->_('Wait Seconds')
                    .col-md-5
                        %input.form-control(type="text" name="config[modules][FCom_Cron][wait_sec]"
                            value="#{$c->get('modules/FCom_Cron/wait_sec')}")
