- $c = $this->model

%fieldset
    .settings-container
        .group
            %h3
                %a(href="#") = $this->_('Disqus Settings')
            %div
                %table
                    %tr
                        %td = $this->_('Show on all pages')
                        %td
                            %input(type="hidden" name="config[modules][FCom_Disqus][show_on_all_pages]" value="0")
                            %input(type="checkbox" name="config[modules][FCom_Disqus][show_on_all_pages]" value="1"
                                checked = $c->get('modules/FCom_Disqus/show_on_all_pages') )
                    %tr
                        %td = $this->_('Javascript Code')
                        %td
                            %textarea.js-code-editor(name="config[modules][FCom_Disqus][code]" data-mode="javascript"
                                style="width:600px; height:200px")  = $c->get('modules/FCom_Disqus/code')
:javascript
    $(function() { FCom.Admin.initCodeEditors() })
