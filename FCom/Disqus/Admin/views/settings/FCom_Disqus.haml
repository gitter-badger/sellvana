- $c = $this->model

%fieldset
    .settings-container
        .group
            %h3
                %a(href="#") = $this->_('Disqus Settings')
            %div
                %table
                    %tr
                        %td = $this->_('Show on all pages')
                        %td
                            %select(name="config[modules][FCom_Disqus][show_on_all_pages]")
                                - echo BUtil::optionsHtml(array(0=>'No', 1=>'Yes'), $c->get('modules/FCom_Disqus/show_on_all_pages'))
                    %tr
                        %td = $this->_('Show on product pages')
                        %td
                            %select(name="config[modules][FCom_Disqus][show_on_product]")
                                - echo BUtil::optionsHtml(array(0=>'No', 1=>'Yes'), $c->get('modules/FCom_Disqus/show_on_product'))
                    %tr
                        %td = $this->_('Comments Javascript Code')
                        %td
                            %textarea.js-code-editor(name="config[modules][FCom_Disqus][comments_code]" data-mode="javascript"
                                style="width:600px; height:200px")  = $c->get('modules/FCom_Disqus/comments_code')
                    %tr
                        %td = $this->_('Counts Javascript Code')
                        %td
                            %textarea.js-code-editor(name="config[modules][FCom_Disqus][counts_code]" data-mode="javascript"
                                style="width:600px; height:200px")  = $c->get('modules/FCom_Disqus/counts_code')
:javascript
    $(function() { FCom.Admin.initCodeEditors() })
