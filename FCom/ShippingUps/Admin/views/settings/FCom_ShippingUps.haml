- $c = $this->model;
- $services = FCom_ShippingUps_ShippingMethod::i()->getServices();
%fieldset
.settings-container
    .group
        %h3
            %a(href="#") = $this->_('UPS API')
        %div
            %table
                %tr
                    %td = $this->_('Access Key')
                    %td
                        %input(size="50" type="text" name="config[modules][FCom_ShippingUps][access_key]"
                               value="#{$c->get('modules/FCom_ShippingUps/access_key')}")
                %tr
                    %td = $this->_('UPS Account')
                    %td
                        %input(size="50" type="text" name="config[modules][FCom_ShippingUps][account]"
                               value="#{$c->get('modules/FCom_ShippingUps/account')}")
                %tr
                    %td = $this->_('Password')
                    %td
                        %input(size="50" type="text" name="config[modules][FCom_ShippingUps][password]"
                               value="#{$c->get('modules/FCom_ShippingUps/password')}")
                %tr
                    %td = $this->_('Rate API URL')
                    %td
                        %input(size="50" type="text" name="config[modules][FCom_ShippingUps][rate_api_url]"
                               value="#{$c->get('modules/FCom_ShippingUps/rate_api_url')}")
                %tr
                    %td = $this->_('Shipping services')
                    %td
                        - foreach ($services as $sId => $sName)
                            %div
                                %input(type="hidden" name="config[modules][FCom_ShippingUps][services][s#{$sId}]" value="0")
                                %input(type="checkbox" name="config[modules][FCom_ShippingUps][services][s{$sId}]"
                                        id="FCom_ShippingUPS-service-#{$sId}"
                                        #{$c->get('modules/FCom_ShippingUps/services/s'.$sId) == 1 ? 'checked': ''} value="1")
                                %label(for="FCom_ShippingUPS-service-#{$sId}") = $sName
