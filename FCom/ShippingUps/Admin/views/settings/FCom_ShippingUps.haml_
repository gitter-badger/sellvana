- $c = $this->model;
- $services = FCom_ShippingUps_ShippingMethod::i()->getServices();
.accordion.accordion-blue.panel-group#settings-FCom_ShippingUps
    .panel.panel-default
        .panel-heading
            %a.accordion-toggle = $this->_('UPS API')
        .panel-collapse.collapse.in#settings-FCom_ShippingUps-group0
            .panel-body
                .form-group
                    %label.col-md-2.control-label = $this->_('Access Key')
                    .col-md-5
                        %input.form-control(size="50" type="text" name="config[modules][FCom_ShippingUps][access_key]"
                            value="#{$c->get('modules/FCom_ShippingUps/access_key')}")
                .form-group
                    %label.col-md-2.control-label = $this->_('UPS Account')
                    .col-md-5
                        %input.form-control(size="50" type="text" name="config[modules][FCom_ShippingUps][account]"
                            value="#{$c->get('modules/FCom_ShippingUps/account')}")
                .form-group
                    %label.col-md-2.control-label = $this->_('Password')
                    .col-md-5
                        %input.form-control(size="50" type="text" name="config[modules][FCom_ShippingUps][password]"
                            value="#{$c->get('modules/FCom_ShippingUps/password')}")
                .form-group
                    %label.col-md-2.control-label = $this->_('Rate API URL')
                    .col-md-5
                        %input.form-control(size="50" type="text" name="config[modules][FCom_ShippingUps][rate_api_url]"
                            value="#{$c->get('modules/FCom_ShippingUps/rate_api_url')}")
                .form-group
                    %label.col-md-2.control-label = $this->_('Shipping services')
                    .col-md-10
                        - foreach ($services as $sId => $sName)
                            .checkbox
                                %label(for="FCom_ShippingUPS-service-#{$sId}")
                                    %input(type="hidden" name="config[modules][FCom_ShippingUps][services][s#{$sId}]" value="0")
                                    %input(type="checkbox" name="config[modules][FCom_ShippingUps][services][s{$sId}]"
                                        id="FCom_ShippingUPS-service-#{$sId}"
                                        #{$c->get('modules/FCom_ShippingUps/services/s'.$sId) == 1 ? 'checked': ''} value="1")
                                    - echo $sName