{% set m = THIS.get('model') %}
{% set validator = THIS.get('validator') %}
{% set fieldData = { validator: validator } %}
{% import THIS.view('admin/form-elements').twigName() as forms %}
<fieldset name="adm-section-group">
    {{ forms.input(fieldData|merge({field:'title', label:'Title'|_, required: 1})) }}
    {{ forms.textarea(fieldData|merge({field:'text', label:'Text'|_, input_class: "ckeditor", input_div_class:"col-md-10"})) }}
    {{ forms.input(fieldData|merge({field:'rating', label:'Rating of product'|_, required: 1})) }}
    {{ forms.input(fieldData|merge({field:'helpful', label:'Helpful points'|_, required: 1})) }}
    {{ forms.boolean(fieldData|merge({field:'approved', label:'Approved'|_})) }}
</fieldset>
