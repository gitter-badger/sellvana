<div class='middle-container'>
    <div class='middle-row'>
        <div class='middle-wrapper'>
            <div class='login-container-header'>
                <div class='container text-center'>
                    <img width="150" src="{{ APP.src('@FCom_Core/img/logo.svg') }}" />
                </div>
            </div>
            <div class='login-container'>
                <div class='container'>
                    {{ THIS.view('core/messages') | raw }}
                    <h1 class='text-center title'>{{ 'Reset password'|_ }}</h1>
                    <form id="password-form" action='{{ APP.href('password/reset') }}' class="validate-form" method='post'>
                        <div class='form-group'>
                            <div class='controls with-icon-over-input'>
                                <input value="" placeholder="{{ 'Password'|_ }}" class="required form-control" data-rule-required="true" name="password" type="password" />
                            </div>
                        </div>
                        <div class='form-group'>
                            <div class='controls with-icon-over-input'>
                                <input value="" placeholder="{{ 'Confirm Password'|_ }}" class="required form-control" data-rule-required="true" equalto="#password" name="password_confirm" type="password" />
                            </div>
                        </div>
                        <button type="submit" class='btn btn-primary btn-lg btn-block'>{{ 'Reset my password'|_ }}</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
require(['jquery', 'jquery.validate'], function($) {
    $(function() {
        $('#password-form').validate();
    })
})
</script>
