- $c = $this->model

.accordion.accordion-blue.panel-group#settings-FCom_Core
    .panel.panel-default
        .panel-heading
            %a.accordion-toggle = $this->_('DB Settings')
        .panel-collapse.collapse#settings-FCom_Core-group0
            .panel-body
                .form-group
                    %label.col-md-2.control-label = $this->_('Host')
                    .col-md-5
                        %input.form-control(type="text" name="config[db][host]" value="#{ $c->get('db/host') }")
                .form-group
                    %label.col-md-2.control-label = $this->_('DB Name')
                    .col-md-5
                        %input.form-control(type="text" name="config[db][dbname]" value="#{ $c->get('db/dbname') }")
                .form-group
                    %label.col-md-2.control-label = $this->_('User')
                    .col-md-5
                        %input.form-control(type="text" name="config[db][username]" value="#{ $c->get('db/username') }")
                .form-group
                    %label.col-md-2.control-label = $this->_('Password')
                    .col-md-5
                        %input.form-control(type="password" name="config[db][password]" placeholder="*****")
                .form-group
                    %label.col-md-2.control-label = $this->_('Enable Logging')
                    .col-md-5
                        %select.form-control(name="config[db][logging]")
                            - echo BUtil::optionsHtml(array(0=>'No',1=>'Yes'), $c->get('db/logging'))
                .form-group
                    %label.col-md-2.control-label = $this->_('Enable Implicit Migration')
                    .col-md-5
                        %select.form-control(name="config[db][implicit_migration]")
                            - echo BUtil::optionsHtml(array(0=>'No',1=>'Yes'), $c->get('db/impricit_migration'))
    .panel.panel-default
        .panel-heading
            %a.accordion-toggle = $this->_('Website')
        .panel-collapse.collapse.in#settings-FCom_Core-group1
            .panel-body
                .form-group
                    %label.col-md-2.control-label = $this->_('Store Name')
                    .col-md-5
                        %input.form-control(type="text" name="config[modules][FCom_Core][store_name]"
                            value="#{ $c->get('modules/FCom_Core/store_name') }")
                .form-group
                    %label.col-md-2.control-label = $this->_('Admin Email')
                    .col-md-5
                        %input.form-control(type="text" name="config[modules][FCom_Core][admin_email]"
                            value="#{ $c->get('modules/FCom_Core/admin_email') }")
                .form-group
                    %label.col-md-2.control-label = $this->_('Copyright Message')
                    .col-md-5
                        %input.form-control(type="text" name="config[modules][FCom_Core][copyright]"
                            value="#{ $c->get('modules/FCom_Core/copyright') }")
    .panel.panel-default
        .panel-heading
            %a.accordion-toggle = $this->_('Session')
        .panel-collapse.collapse.in#settings-FCom_Core-group2
            .panel-body
                .form-group
                    %label.col-md-2.control-label = $this->_('Session Handler')
                    .col-md-5
                        %select.form-control(name="config[cookie][session_handler]")
                            - echo BUtil::optionsHtml(BSession::i()->getHandlers(), $c->get('cookie/session_handler'))
                .form-group
                    %label.col-md-2.control-label = $this->_('Cookie Timeout')
                    .col-md-5
                        %input.form-control(type="text" name="config[cookie][timeout]" value="#{ $c->get('cookie/timeout') }")
                .form-group
                    %label.col-md-2.control-label = $this->_('Cookie Domain')
                    .col-md-5
                        %input.form-control(type="text" name="config[cookie][domain]" value="#{ $c->get('cookie/domain') }")
                .form-group
                    %label.col-md-2.control-label = $this->_('Cookie Path')
                    .col-md-5
                        %input.form-control(type="text" name="config[cookie][path]" value="#{ $c->get('cookie/path') }")
                .form-group
                    %label.col-md-2.control-label = $this->_('Session Namespace')
                    .col-md-5
                        %input.form-control(type="text" name="config[cookie][session_namespace]"
                            value="#{ $c->get('cookie/session_namespace') }")
                .form-group
                    %label.col-md-2.control-label = $this->_('Verify Session IP')
                    .col-md-5
                        %select.form-control(name="config[cookie][session_check_ip]")
                            - echo BUtil::optionsHtml(array(0=>'No',1=>'Yes'), $c->get('cookie/session_check_ip'))
    .panel.panel-default
        .panel-heading
            %a.accordion-toggle = $this->_('System')
        .panel-collapse.collapse.in#settings-FCom_Core-group3
            .panel-body
                .form-group
                    %label.col-md-2.control-label = $this->_('Hide script file name in URL')
                    .col-md-5
                        %select.form-control(name="config[web][hide_script_name]")
                            - echo BUtil::optionsHtml(array(0=>'No',1=>'Yes'), $c->get('web/hide_script_name'))

    .panel.panel-default
        .panel-heading
            %a.accordion-toggle = $this->_('CSRF Protection')
        .panel-collapse.collapse.in#settings-FCom_Core-group4
            .panel-body
                .form-group
                    %label.col-md-2.control-label = $this->_('Check Method')
                    .col-md-5
                        %select.form-control(name="config[web][csrf_check_method]")
                            - echo BUtil::optionsHtml(array('referrer'=>'Referrer', 'token'=>'Token'), $c->get('web/csrf_check_method'))
