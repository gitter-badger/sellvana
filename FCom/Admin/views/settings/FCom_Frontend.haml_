- $c = $this->model

.accordion.accordion-blue.panel-group#settings-FCom_Frontend
    .panel.panel-default
        .panel-heading
            %a.accordion-toggle = $this->_('HTML')
        .panel-collapse.collapse#settings-FCom_Frontend-group0
            .panel-body
                .form-group
                    %label.col-md-2.control-label = $this->_('Theme')
                    .col-md-5
                        %select.form-control(name="config[modules][FCom_Frontend][theme]")
                            - echo BUtil::optionsHtml(BLayout::i()->getThemes('FCom_Frontend', true), $c->get('modules/FCom_Frontend/theme'))
                .form-group
                    %label.col-md-2.control-label = $this->_('Additional JS Files')
                    .col-md-5
                        %textarea.form-control(name="config[modules][FCom_Frontend][add_js_files]" rows="5") = $c->get('modules/FCom_Frontend/add_js_files')
                .form-group
                    %label.col-md-2.control-label = $this->_('Additional CSS Files')
                    .col-md-5
                        %textarea.form-control(name="config[modules][FCom_Frontend][add_css_files]" rows="5") = $c->get('modules/FCom_Frontend/add_css_files')
                .form-group
                    %label.col-md-2.control-label = $this->_('Additional JS Code')
                    .col-md-5
                        %textarea.form-control.js-code-editor(name="config[modules][FCom_Frontend][add_js_code]" rows="5" data-mode="javascript") = $c->get('modules/FCom_Frontend/add_js_code')
                .form-group
                    %label.col-md-2.control-label = $this->_('Additional CSS Style')
                    .col-md-5
                        %textarea.form-control.js-code-editor(name="config[modules][FCom_Frontend][add_css_style]" rows="5" data-mode="css") = $c->get('modules/FCom_Frontend/add_css_style')
    .panel.panel-default
        .panel-heading
            %a.accordion-toggle = $this->_('Area Settings')
        .panel-collapse.collapse.in#settings-FCom_Frontend-group1
            .panel-body
                .form-group
                    %label.col-md-2.control-label = $this->_('IP: Mode')
                    .col-md-5
                        %textarea.form-control(name="config[mode_by_ip][FCom_Frontend]"
                            style="width:400px; height:100px") = $c->get('mode_by_ip/FCom_Frontend')
                .form-group
                    %label.col-md-2.control-label = $this->_('Modules to run in RECOVERY mode')
                    .col-md-5
                        %input.form-control(type="text" name="config[recovery_modules][FCom_Frontend]"
                            value="#{ $c->get('recovery_modules/FCom_Frontend') }")
    .panel.panel-default
        .panel-heading
            %a.accordion-toggle = $this->_('Navigation')
        .panel-collapse.collapse.in#settings-FCom_Frontend-group2
            .panel-body
                .form-group
                    %label.col-md-2.control-label = $this->_('Select top menu')
                    .col-md-5
                        %select.form-control(name="config[modules][FCom_Frontend][nav_top][type]")
                            - echo BUtil::optionsHtml(array(''=>'Select an option', 'cms'=>'CMS menu', 'categories_root'=>'Categories menu by root id', 'categories_custom'=>'Categories menu by custom selection'), $c->get('modules/FCom_Frontend/nav_top/type'))
                .form-group
                    %label.col-md-2.control-label = $this->_('Root id cms')
                    .col-md-5
                        %input.form-control(type="text" name="config[modules][FCom_Frontend][nav_top][root_cms]"
                            value="#{ $c->get('modules/FCom_Frontend/nav_top/root_cms') }")
                .form-group
                    %label.col-md-2.control-label = $this->_('Root id categories')
                    .col-md-5
                        %input.form-control(type="text" name="config[modules][FCom_Frontend][nav_top][root_category]"
                            value="#{ $c->get('modules/FCom_Frontend/nav_top/root_category') }")

