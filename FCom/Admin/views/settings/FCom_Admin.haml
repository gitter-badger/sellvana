- $c = $this->model

%fieldset
    .accordion#settings-FCom_Admin
        .accordion-group
            .accordion-heading
                %a = $this->_('HTML')
            .accordion-body.in
                .accordion-inner
                    %table
                        %tr
                            %td = $this->_('Theme')
                            %td
                                %select(name="config[modules][FCom_Admin][theme]")
                                    - echo BUtil::optionsHtml(BLayout::i()->getThemes('FCom_Admin', true), $c->get('modules/FCom_Admin/theme'))
                        %tr
                            %td = $this->_('Additional JS Files')
                            %td
                                %textarea(name="config[modules][FCom_Admin][add_js_files]"
                                    style="width:400px; height:100px") = $c->get('modules/FCom_Admin/add_js_files')
                        %tr
                            %td = $this->_('Additional CSS Files')
                            %td
                                %textarea(name="config[modules][FCom_Admin][add_css_files]"
                                    style="width:400px; height:100px") = $c->get('modules/FCom_Admin/add_css_files')
                        %tr
                            %td = $this->_('Additional JS Code')
                            %td
                                %textarea.js-code-editor(name="config[modules][FCom_Admin][add_js_code]" data-mode="javascript"
                                    style="width:400px; height:100px") = $c->get('modules/FCom_Admin/add_js_code')
                        %tr
                            %td = $this->_('Additional CSS Style')
                            %td
                                %textarea.js-code-editor(name="config[modules][FCom_Admin][add_css_style]" data-mode="css"
                                    style="width:400px; height:100px") = $c->get('modules/FCom_Admin/add_css_style')
        .accordion-group
            .accordion-heading
                %a(href="#") = $this->_('Area Settings')
            .accordion-body
                .accordion-inner
                    %table
                        %tr
                            %td = $this->_('IP: Mode')
                            %td
                                %textarea(name="config[mode_by_ip][FCom_Admin]"
                                    style="width:400px; height:100px") = $c->get('mode_by_ip/FCom_Admin')
                        %tr
                            %td = $this->_('Modules to run in RECOVERY mode')
                            %td
                                %input(type="text" name="config[recovery_modules][FCom_Admin]"
                                    value="#{ $c->get('recovery_modules/FCom_Admin') }")

:javascript
    $(function() { FCom.Admin.Accordion('settings-FCom_Admin'); FCom.Admin.initCodeEditors() })
