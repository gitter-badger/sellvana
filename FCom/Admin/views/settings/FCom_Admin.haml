- $c = $this->model

%fieldset
    .settings-container
        .group
            %h3
                %a(href="#") = $this->_('Area Settings')
            %div
                %table
                    %tr
                        %td = $this->_('IP: Mode')
                        %td
                            %textarea(name="config[modules][FCom_Admin][mode_by_ip]" style="width:400px; height:100px")
                                = $c->get('modules/FCom_Admin/mode_by_ip')
                    %tr
                        %td = $this->_('Modules to run in RECOVERY mode')
                        %td
                            %input(type="text" name="config[modules][FCom_Admin][recovery_modules]" value="#{ $c->get('modules/FCom_Admin/recovery_modules') }")
        .group
            %h3
                %a(href="#") = $this->_('HTML')
            %div
                %table
                    %tr
                        %td = $this->_('Theme')
                        %td
                            %select(name="config[modules][FCom_Admin][theme]")
                                = $this->optionsHtml(BLayout::i()->getThemes('FCom_Admin', true), $c->get('modules/FCom_Admin/theme'))
                    %tr
                        %td = $this->_('Additional JS')
                        %td
                            %textarea(name="config[modules][FCom_Admin][add_js]" style="width:400px; height:100px")
                                = $c->get('modules/FCom_Admin/add_js')
                    %tr
                        %td = $this->_('Additional CSS')
                        %td
                            %textarea(name="config[modules][FCom_Admin][add_css]" style="width:400px; height:100px")
                                = $c->get('modules/FCom_Admin/add_css')
