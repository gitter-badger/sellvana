- $c = $this->model

%fieldset
    .settings-container
        .group
            %h3
                %a(href="#") = $this->_('Area Settings')
            %div
                %table
                    %tr
                        %td = $this->_('IP: Mode')
                        %td
                            %textarea(name="config[modules][FCom_Frontend][mode_by_ip]"
                                style="width:400px; height:100px") = $c->get('modules/FCom_Frontend/mode_by_ip')
                    %tr
                        %td = $this->_('Modules to run in RECOVERY mode')
                        %td
                            %input(type="text" name="config[modules][FCom_Frontend][recovery_modules]"
                                value="#{ $c->get('modules/FCom_Frontend/recovery_modules') }")
        .group
            %h3
                %a(href="#") = $this->_('HTML')
            %div
                %table
                    %tr
                        %td = $this->_('Theme')
                        %td
                            %select(name="config[modules][FCom_Frontend][theme]")
                                - echo $this->optionsHtml(BLayout::i()->getThemes('FCom_Admin', true), $c->get('modules/FCom_Frontend/theme'))
                    %tr
                        %td = $this->_('Additional JS')
                        %td
                            %textarea(name="config[modules][FCom_Frontend][add_js]"
                                style="width:400px; height:100px") = $c->get('modules/FCom_Frontend/add_js')
                    %tr
                        %td = $this->_('Additional CSS')
                        %td
                            %textarea(name="config[modules][FCom_Frontend][add_css]"
                                style="width:400px; height:100px") = $c->get('modules/FCom_Frontend/add_css')
        .group
            %h3
                %a(href="#") = $this->_('Navigation')
            %div
                %table
                    %tr
                        %td = $this->_('Select top menu')
                        %td
                            %select(name="config[modules][FCom_Frontend][nav_top][type]")
                                - echo $this->optionsHtml(array(''=>'Select an option', 'cms'=>'CMS menu', 'categories_root'=>'Categories menu by root id', 'categories_custom'=>'Categories menu by custom selection'), $c->get('modules/FCom_Frontend/nav_top/type'))
                    %tr
                        %td = $this->_('Root id cms')
                        %td
                            %input(type="text" name="config[modules][FCom_Frontend][nav_top][root_cms]"
                                value="#{ $c->get('modules/FCom_Frontend/nav_top/root_cms') }")
                    %tr
                        %td = $this->_('Root id categories')
                        %td
                            %input(type="text" name="config[modules][FCom_Frontend][nav_top][root_category]"
                                value="#{ $c->get('modules/FCom_Frontend/nav_top/root_category') }")
