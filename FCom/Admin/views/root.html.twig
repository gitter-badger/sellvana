<!DOCTYPE html>
<html {{ THIS.getHtmlAttributes() | raw }}>
<head>
    {{ THIS.hook('head') | raw }}
</head>
<body class="{{ THIS.getBodyClass() }}">
    {% if APP.instance('FCom_Admin_Model_User').isLoggedIn() %}
        {{ THIS.view('admin/header') | raw }}
        <div class="f-admin-container" id="root-layout">
            {{ THIS.view('admin/nav') | raw }}
            <div class="f-admin-main-view">
                {{ THIS.hook('main')|raw }}
            </div>
        </div>
    {% else %}
        {{ THIS.hook('main') | raw }}
    {% endif %}

    {{ THIS.hook('before_body_end') | raw }}
</html>
