<div class='middle-container'>
    <div class='middle-row'>
        <div class='middle-wrapper'>
            <div class='login-container-header'>
                <div class='container text-center'>
                    <img width="150" src="{{ APP.src('@FCom_Core/img/logo.svg') }}" />
                </div>
            </div>
            <div class='login-container'>
                <div class='container'>
                  {{ THIS.view('core/messages') | raw }}
                  <h1 class='text-center title'>{{ 'Recover password'|_ }}</h1>
                  <form id="password-form" action='{{ APP.href('password/recover') }}' class="validate-form" method='post'>
                      <div class='form-group'>
                          <div class='controls with-icon-over-input'>
                              <input value="" placeholder="{{ 'E-mail'|_ }}" class="required form-control" name="email" type="text" />
                          </div>
                      </div>
                      <button type="submit" class='btn btn-primary btn-lg btn-block'>{{ 'Send me the instructions'|_ }}</button>
                  </form>
                  <div class='text-center'>
                      <hr class='hr-normal'>
                      <a href='{{ APP.href('login') }}'>
                          <i class='icon-chevron-left'></i>
                          {{ 'Back to Login'|_ }}
                      </a>
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
require(['jquery', 'jquery.validate'], function($) {
    $(function() {
        $('#password-form').validate();
    })
})
</script>
