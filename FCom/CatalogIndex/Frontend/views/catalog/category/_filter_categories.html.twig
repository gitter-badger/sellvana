{% set fKey = THIS.get('facet_key') %}
{% set facet = THIS.get('facet') %}
{% set facets = THIS.products_data['facets'] %}
{% set s = THIS.products_data['state'] %}
<section class="block-sub">
    {%  if facet['values'] %}
        <header class="block-sub-title"><span class="title">{{ "Categories" | _ }}</span></header>
        <ul>
        {% for vKey, value in facet['values'] %}
            <li style="padding-left:{{ value['level']*10 }}px;">
                {%  if value['selected'] %}
                    <strong>{{ value['display'] }}</strong>
                {% elseif value['parent'] %}
                    <strong><a href="{{ APP.href(vKey) ~ '?' ~ REQUEST.rawGet() }}">{{ value['display'] }}</a></strong>
                {% else %}
                    <a href="{{ APP.href(vKey) ~ '?' ~ REQUEST.rawGet() }}">{{ value['display'] }}
                        {{ (value['cnt'] ? '<span class="count">(' ~ value['cnt'] ~ ')</span>') | raw }}</a>
                {% endif %}
            </li>
        {% endfor %}
        </ul>
    {% endif %}
    <a href="{{ APP.href('catalogindex/search') ~ '?q=' ~ REQUEST.get('q')|e('url') }}">{{ "Clear filters" | _ }}</a>
</section>
