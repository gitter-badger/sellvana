{% set m = THIS.model %}

<fieldset>
    <div class="form-group">
        <label class="col-md-2 label-control">{{ "Name"|_ }}</label>
        <div class="col-md-5">
            <input class="form-control" type="text" name="model[name]" value="{{ m.get('name') }}"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 label-control">{{ "Domains"|_ }}</label>
        <div class="col-md-5">
            <textarea class="form-control" name="model[domains]">{{ m.get('domains') }}</textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 label-control">{{ "Default Theme"|_ }}</label>
        <div class="col-md-5">
            <input class="form-control" type="text" name="model[default_theme]" value="{{ m.get('default_theme') }}"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 label-control">{{ "Layout Update"|_ }}</label>
        <div class="col-md-5">
            <textarea class="form-control" id="main-layout_update" name="model[layout_update]" rows="5">{{ m.get('layout_update') }}</textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 label-control">{{ "Meta Title"|_ }}</label>
        <div class="col-md-5">
            <input class="form-control" type="text" name="model[meta_title]" value="{{ m.get('meta_title') }}"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 label-control">{{ "Meta Description"|_ }}</label>
        <div class="col-md-5">
            <textarea class="form-control" id="main-content" name="model[meta_description]" rows="5">{{ m.get('meta_description') }}</textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 label-control">{{ "Meta Keywords"|_ }}</label>
        <div class="col-md-5">
            <textarea class="form-control" id="main-content" name="model[meta_keywords]" rows="5">{{ m.get('meta_keywords') }}</textarea>
        </div>
    </div>
</fieldset>