- $c = $this->model;
- $paymentMethods = BUtil::arrayToOptions(FCom_Sales_Main::i()->getPaymentMethods(), '.getName');
- $shippingMethods = BUtil::arrayToOptions(FCom_Sales_Main::i()->getShippingMethods(), '.getName');

%fieldset
.settings-container
    .group
        %h3
            %a(href="#") = $this->_('Defaults')
        %div
            %table
                %tr
                    %td = $this->_('Default Shipping Method')
                    %td
                        %select(name="config[modules][FCom_Sales][default_shipping_method]")
                            - echo $this->optionsHtml($shippingMethods, $c->get('modules/FCom_Sales/default_shipping_method'))
                %tr
                    %td = $this->_('Default Payment Method')
                    %td
                        %select(name="config[modules][FCom_Sales][default_payment_method]")
                            - echo $this->optionsHtml($paymentMethods, $c->get('modules/FCom_Sales/default_payment_method'))
