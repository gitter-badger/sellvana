- $c = $this->model
- $mname =  BModuleRegistry::i()->currentModuleName()
- $baseHtmlName = "config[modules][" . $mname . "]"
- $baseConfigPath = 'modules/'. $mname
- $prefix = "ideal_"

%fieldset
  .settings-container
    .group
      %h3
        %a(href="#") = $this->_('iDEAL Settings')
      %div
        %table

          %tr
            %td
              %label{:for => $prefix . "active"} = $this->_("Enabled")
            %td
              %select{:name => $baseHtmlName . "[active]"}
                - echo BUtil::optionsHtml(array(0=>'No', 1=>'Yes'), $c->get($baseConfigPath . '/active'))
          %tr
            %td
              %label{:for => $prefix . "title"} = $this->_("Display Title")
            %td
              %input{:id => $prefix . "title", :name => $baseHtmlName . "[title]", :type => "text", :value => $c->get($baseConfigPath . '/title')}/
          %tr
            %td
              %label{:for => $prefix . "partner_id"} = $this->_("Pertner ID")
            %td
              %input{:id => $prefix . "partner_id", :name => $baseHtmlName . "[partner_id]", :type => "text", :value => $c->get($baseConfigPath . '/partner_id')}/
          %tr
            %td
              %label{:for => $prefix . "profile_key"} = $this->_("Profile Key")
            %td
              %input{:id => $prefix . "profile_key", :name => $baseHtmlName . "[profile_key]", :type => "password", :value => $c->get($baseConfigPath . '/profile_key')}/
          %tr
            %td
              %label{:for => $prefix . "sort_order"} = $this->_("Payment Method Sort Order")
            %td
              %input{:id => $prefix . "sort_order", :name => $baseHtmlName . "[sort_order]", :type => "text", :value => $c->get($baseConfigPath . '/sort_order')}/
          %tr
            %td
              %label{:for => $prefix . "order_status"} = $this->_("New Order Status")
            %td
              %select{:id => $prefix . "order_status", :name => $baseHtmlName . "[order_status]"}
                - echo BUtil::optionsHtml( array('' => "Select One", "processing" => "Processing"), $c->get($baseConfigPath . '/order_status'))
          %tr
            %td
              %label{:for => $prefix . "test"} = $this->_("Test Mode")
            %td
              %select{:id => $prefix . "test", :name => $baseHtmlName . "[test]"}
                - echo BUtil::optionsHtml(array(0=>'No', 1=>'Yes'), $c->get($baseConfigPath . '/test'))
