<div class="portal-login-box-container">
    <div class="portal-login-box">
        <header class="portal-login-header">
            <strong class="logo">
                {{ "Reset Your Password" | _ }}
            </strong>
        </header>
        {{ THIS.messagesHtml() | raw }}
        <!--<div class="msg success-msg">Something went wrong</div>-->
        <form action="{{ APP.href('customer/password/reset') }}" method="post" id="reset-form">
            <fieldset>
                    <div class="control-group">
                        <label for="reset-password" class="control-label required">{{ "Password" | _ }}</label>
                        <div class="controls">
                          <input type="password" name="password" class="required" id="reset-password"/>
                        </div>
                    </div>
                    <div class="control-group">
                        <label for="reset-password_confirm" class="control-label required">{{ "Confirm Password" | _ }}</label>
                        <div class="controls">
                          <input type="password" name="password_confirm" class="required" id="reset-password_confirm"/>
                        </div>
                    </div>
              <div class="btn-group">
                  <input type="hidden" name="token" value="{{ REQUEST.request('token') }}"/>
                  <input type="submit" class="btn btn-primary" value="{{ "Reset Password" | _ }}"/>
              </div>
            </fieldset>
        </form>
    </div>
</div>
<script>
require(['jquery', 'jquery.validate'], function($) {
    $(function() {
        $('#reset-form').validate();
    })
})
</script>
