<div class="portal-login-box-container">
    <div class="portal-login-box">
        <header class="portal-login-header">
            <strong class="logo">{{ CONFIG.get('modules/FCom_Core/store_name') }}</strong>
        </header>
        {{ THIS.messagesHtml() | raw }}
        <!--<div class="msg success-msg">Something went wrong</div>-->
        <form action="{{ APP.href('customer/password/recover') }}" method="post" id="recovery-form">
            <fieldset>
                <div class="control-group">
                  <label for="recovery-email" class="control-label required">{{ "Email" | _ }}</label>
                  <div class="controls">
                    <input type="email" name="email" class="required" id="recovery-email"/>
                  </div>
                </div>
                <div class="btn-group">
                    <input class="btn btn-primary" type="submit" value="{{ "Send Recovery Instructions" | _ }}"/>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<script>
require(['jquery', 'jquery.validate'], function($) {
    $(function() {
        $('#recovery-form').validate();
    })
})
</script>
