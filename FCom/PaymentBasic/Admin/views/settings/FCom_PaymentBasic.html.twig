{% set c = THIS.get('model') %}
{% set fieldData = { model: c, id_prefix:'FCom_PaymentBasic', name_prefix:'config[modules][FCom_PaymentBasic]' } %}
{% import THIS.view('admin/form-elements').twigName() as forms %}
<h2>{{ "Payment Basic Settings"|_}}</h2>
{{ forms.accordion_start({id:'settings-FCom_PaymentBasic'}) }}
     {{ forms.accordion_panel_start({label:'Basic Payment Settings'|_, id:'settings-FCom_PaymentBasic-group0', in:1}) }}
        {{ forms.input(fieldData|merge({field:'label', label:'Label'|_, value:c.get('modules/FCom_PaymentBasic/label')})) }}
        {{ forms.input(fieldData|merge({field:'sort_order', label:'Sort Order'|_, value:c.get('modules/FCom_PaymentBasic/sort_order')})) }}
        {{ forms.boolean(fieldData|merge({field:'order_status_authorized', label:'Custom Order Status On Payment'|_, value: c.get("modules/FCom_PaymentBasic/order_status_authorized")})) }}
     {{ forms.accordion_panel_end }}
{{ forms.accordion_end }}
