{% set c = THIS.model %}

<div class="accordion accordion-blue panel-group" id="settings-FCom_PaymentBasic">
    <div class="panel panel-default">
        <div class="panel-heading">
            <a href="#" class="accordion-toggle">{{ 'Basic Payment Settings'|_ }}</a>
        </div>
        <div class="panel-collapse collapse in" id="settings-FCom_PaymentBasic-group0">
            <div class="panel-body">
                <div class="form-group">
                    <label class="col-md-2 control-label">{{ 'Label'|_ }}</label>
                    <div class="col-md-5">
                        <input type="text" name="config[modules][FCom_PaymentBasic][label]" value="{{ c.get('modules/FCom_PaymentBasic/label') }}" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">{{ 'Sort Order'|_ }}</label>
                    <div class="col-md-5">
                        <input type="text" name="config[modules][FCom_PaymentBasic][sort_order]" value="{{ c.get('modules/FCom_PaymentBasic/sort_order') }}" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">{{ 'Custom Order Status On Payment'|_ }}</label>
                    <div class="col-md-5">
                        <select nname="config[modules][FCom_PaymentBasic][order_status_authorized">
                            {{ UTIL.optionsHtml({0:'No',1:'Yes'}, c.get('modules/FCom_PaymentBasic/order_status_authorized')) }}
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
