{% set model = THIS.model %}

<fieldset>
    <h3 class="form-group-title">{{ 'Group Details'|_ }}</h3>
    <div class="form-group">
        <label class="col-md-2 label-control" for="model-title">{{ 'Group Title'|_ }}</label>
        <div class="col-md-5">
            <input id="model-title" class="form-control" type="text" name="model[title]" value="{{ model.get('title') }}" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 label-control" for="model-code">{{ 'Group Code'|_ }}</label>
        <div class="col-md-5">
            <input id="model-code" class="form-control" type="text" name="model[code]" value="{{ model.get('code') }}" />
        </div>
    </div>
</fieldset>
